ZSH=<%= @zsh_ohmyzsh_dir %>
ZSH_CUSTOM=<%= @zsh_custom_dir %>
ZSH_THEME="default"

plugins=(ant autojump bundler brew coffee emacs extract git gradle lein mvn osx rbenv rsync svn terminalapp textmate urltools vagrant)

source $ZSH/oh-my-zsh.sh

# Hello Message
echo -e "Kernel Information: " `uname -smr`
echo -e "`zsh --version`"
echo -ne "Uptime: "; uptime
echo -ne "Server time is: "; date

# Setup boxen
[[ -s /opt/boxen/env.sh ]] && source /opt/boxen/env.sh

# Setup zsh for Emacs
[[ $EMACS = t ]] && unsetopt zle

# Aliases
alias lla="ls -lah"
alias ber="nocorrect be rspec"
alias reboxen="/opt/boxen/repo/script/boxen"
