ZSH=<%= @zsh_ohmyzsh_dir %>
ZSH_CUSTOM=<%= @zsh_custom_dir %>
ZSH_THEME="default"

plugins=(ant bundler brew extract git gradle lein mvn osx svn terminalapp textmate vagrant)

source $ZSH/oh-my-zsh.sh

# Hello Message
echo -e "Kernel Information: " `uname -smr`
echo -e "`zsh --version`"
echo -ne "Uptime: "; uptime
echo -ne "Server time is: "; date

# Setup boxen
[[ -s /opt/boxen/env.sh ]] && source /opt/boxen/env.sh 

# Setup autojump
[[ -s `brew --prefix`/etc/autojump.sh ]] && source `brew --prefix`/etc/autojump.sh

# Setup zsh for Emacs
[[ $EMACS = t ]] && unsetopt zle

# Aliases
alias lla="ls -lah"
alias ber="nocorrect be rspec"
alias reboxen="/opt/boxen/repo/script/boxen"
